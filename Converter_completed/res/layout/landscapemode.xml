<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FF99" >

    <EditText
        android:id="@+id/editTextInput1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/spinnerAdapter"
        android:ems="10"
        android:hint="Enter the value"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/editTextInput2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editTextInput1"
        android:ems="10"
        android:hint="Converted "
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/buttonPressed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="40dp"
        android:layout_toLeftOf="@+id/textViewSelectedConverter"
        android:text="Button" />

    <TextView
        android:id="@+id/textViewOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonPressed"
        android:layout_alignBottom="@+id/buttonPressed"
        android:layout_alignLeft="@+id/textViewSelectedConverter"
        android:layout_marginLeft="72dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Spinner
        android:id="@+id/spinnerAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textViewSelectedConverter" />

   <TextView
        android:id="@+id/textViewSelectedConverter1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />
</RelativeLayout>
