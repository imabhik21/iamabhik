<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#35b999"
    tools:context=".MainActivity" >

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/editTextshowresult"
        android:layout_below="@+id/textViewadaptervie" />

    <TextView
        android:id="@+id/textViewadaptervie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="TextView" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextshowresult"
        android:layout_below="@+id/spinner1" >

        <RadioButton
            android:id="@+id/radiochoice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Choice1" />

        <RadioButton
            android:id="@+id/radiochoice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choice2" />
    </RadioGroup>

    <EditText
        android:id="@+id/editTextshowresult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroup1"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewadaptervie"
        android:layout_alignLeft="@+id/textViewshowresultview"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textViewshowresultview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/buttonconvert"
        android:layout_below="@+id/buttonconvert"
        android:layout_marginTop="39dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/buttonconvert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextshowresult"
        android:layout_below="@+id/editTextshowresult"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="16dp"
        android:text="Convert" />

    <Button
        android:id="@+id/buttonclearscreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewshowresultview"
        android:layout_alignRight="@+id/editTextshowresult"
        android:text="Clear " />

</RelativeLayout>
